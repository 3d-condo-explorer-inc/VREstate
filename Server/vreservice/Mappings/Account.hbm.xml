<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="vrebo" namespace="Vre.Server.BusinessLogic">
  <class name="Account" table="Accounts" dynamic-update="true" lazy="false">

    <id name="AutoID" column="AutoID" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="SuiteID" column="SuiteID" />
    <property name="BuyerID" column="BuyerID" />
    <property name="CurrentBalance" column="CurrentBalance" />
    <property name="CurrencyCents" column="CurrencyCents" />
  </class>
</hibernate-mapping>
