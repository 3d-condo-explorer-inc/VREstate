<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel >
				<g:VerticalPanel spacing="5">
					<g:Label text="Changing Password" horizontalAlignment="ALIGN_CENTER"/>
					<g:DeckPanel ui:field="deckResult">
						<g:HTML wordWrap="true">Please check your eMail<br />
					and follow the instructions.<br /><br />
					After you done, try to login<br />
					again with new Password</g:HTML>
						<g:HTML wordWrap="true">Sorry, there are some errors.<br /> Please, try again.</g:HTML>
					</g:DeckPanel>
				<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Button width="80%" text="Back to Login" ui:field="buttonEnter"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
</ui:UiBinder> 