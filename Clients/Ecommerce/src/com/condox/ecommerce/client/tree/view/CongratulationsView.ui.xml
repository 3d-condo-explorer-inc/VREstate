<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
		.big-text {
			font-size: 24px;
		}
	</ui:style>
	<g:VerticalPanel width="100%" height="100%"
		horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		<g:VerticalPanel >
			<g:VerticalPanel spacing="5" width="300px">
				<g:Cell horizontalAlignment="ALIGN_CENTER">
					<g:HTML wordWrap="true" height="200px" ui:field="htmlSummary" styleName="{style.big-text}">-New ViewOrder created- <br/><br/><br/>The Invoice and the link has been sent to your  email address.</g:HTML>
				</g:Cell>
				<g:HorizontalPanel width="100%"
					horizontalAlignment="ALIGN_CENTER">
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
						<g:Button ui:field="buttonCancel" text="Back to your account">Cancel</g:Button>
					</g:Cell>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 