<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			margin: null null null 100px;
			font-weight: normal;
		}
		.my-product-type {
			margin-left: 50px;
		}
		.type-info {
			margin-top: 2px;
			margin-left: 10px;
		}
	</ui:style>
					<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HorizontalPanel spacing="10">
							<g:HTML wordWrap="true">Please select an Interactive 3D Product you wish to order:</g:HTML>
						</g:HorizontalPanel>
						<g:VerticalPanel>
							<g:VerticalPanel spacing="10">
						<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel spacing="10">
				<g:RadioButton name="Listing/Layout" text="Interactive 3D Listing" ui:field="rbListing" checked="true"/>
				<g:HorizontalPanel styleName="{style.my-product-type}">
					<g:RadioButton name="Private/Shared" styleName="{style.important}" ui:field="rbListingPrivate" checked="true" text="Private"/>
					<g:HTML wordWrap="true" direction="RTL" horizontalAlignment="ALIGN_LEFT" styleName="{style.type-info}">(they'll see your single listing in single building)</g:HTML>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.my-product-type}">
					<g:RadioButton name="Private/Shared" text="Shared" styleName="{style.important}" ui:field="rbListingShared"/>
					<g:HTML wordWrap="true" styleName="{style.type-info}">(they'll see your Listing and dosens of neighboring Shared Interactive 3D Listings)</g:HTML>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:RadioButton name="Listing/Layout" text="Interactive 3D Layout  (they&apos;ll see all units of your building)" ui:field="rbLayout" enabled="false"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
					</g:VerticalPanel>
						</g:VerticalPanel>
									<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_BOTTOM">
					<g:HorizontalPanel spacing="10">
						<g:Button text="Cancel" width="100px" ui:field="buttonCancel"/>
					</g:HorizontalPanel>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="10">
						<g:Button text="&lt;&lt; Prev" width="100px" ui:field="buttonPrev"/>
						<g:Button text="Next &gt;&gt;" width="100px" ui:field="buttonNext"/>
					</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
					</g:VerticalPanel>
</ui:UiBinder> 