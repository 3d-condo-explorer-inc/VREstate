<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel borderWidth="3">
				<g:VerticalPanel spacing="5">
					<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
						<g:Button width="25px" height="25px" text="X" ui:field="buttonClose"/>
					</g:HorizontalPanel>
					<g:Label text="Change Login Email" horizontalAlignment="ALIGN_CENTER"/>
					<g:HorizontalPanel width="100%" spacing="10">
						<g:VerticalPanel>
							<g:Label text="New Email"/>
							<g:TextBox width="250px" ui:field="textEmail"/>
						</g:VerticalPanel>
						<g:Cell height="100%" verticalAlignment="ALIGN_BOTTOM">
							<g:Button text="Apply" ui:field="buttonChangeEmail"/>
						</g:Cell>
					</g:HorizontalPanel>
					<g:Label horizontalAlignment="ALIGN_CENTER" text="Change Password"/>
					<g:HorizontalPanel spacing="10" width="100%">
						<g:VerticalPanel>
						<g:Label text="Old Password"/>
						<g:TextBox width="115px" ui:field="textOldPassword"/>
						<g:Label text="New Password"/>
						<g:TextBox width="115px" ui:field="textNewPassword"/>
					</g:VerticalPanel>
						<g:Cell verticalAlignment="ALIGN_BOTTOM">
							<g:VerticalPanel>
							<g:Label text="Enter again, please"/>
							<g:TextBox width="115px" ui:field="textNewPassword2"/>
						</g:VerticalPanel>
						</g:Cell>
						<g:Cell verticalAlignment="ALIGN_BOTTOM">
							<g:Button text="Apply" ui:field="buttonChangePassword"/>
						</g:Cell>
					</g:HorizontalPanel>
			</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
</ui:UiBinder> 