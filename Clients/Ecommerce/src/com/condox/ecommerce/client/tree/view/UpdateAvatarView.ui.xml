<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
		.ageement {
			background-color: saddlebrown;
		}
	</ui:style>
	<g:VerticalPanel width="100%" height="100%"
		horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		<g:VerticalPanel>
			<g:VerticalPanel spacing="5">
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" width="100%">
			<g:Button ui:field="buttonClose">x</g:Button>
		</g:HorizontalPanel>
				<g:Label/>
				<g:FormPanel ui:field="form">
					<g:FileUpload width="100%" height="100%" ui:field="upload" />
				</g:FormPanel>
				<g:HTML wordWrap="true" width="400px" height="400px" ui:field="htmlImage"/>
				<g:HorizontalPanel width="100%"
					horizontalAlignment="ALIGN_LEFT">
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:HorizontalPanel spacing="5">
							<g:Button width="75px" ui:field="buttonApply" text="Apply" />
					</g:HorizontalPanel>
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="5" horizontalAlignment="ALIGN_LEFT">
						</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 