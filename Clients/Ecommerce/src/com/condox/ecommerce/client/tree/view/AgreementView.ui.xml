<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
		.ageement {
			background-color: saddlebrown;
		}
	</ui:style>
	<g:VerticalPanel width="100%" height="100%"
		horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		<g:VerticalPanel>
			<g:VerticalPanel spacing="5" width="500px">
				<g:Label text="Please read terms and conditions of the order you are about to make:" horizontalAlignment="ALIGN_LEFT" />
				<g:HTML wordWrap="true" height="200px" ui:field="htmlSummary" styleName="{style.ageement}">
</g:HTML>
				<g:HorizontalPanel width="100%"
					horizontalAlignment="ALIGN_LEFT" spacing="5">
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:Button width="75px" ui:field="buttonCancel">Cancel</g:Button>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT" width="100%">
						<g:HorizontalPanel spacing="15">
						<g:Button width="75px" ui:field="buttonAgree" text="I Agree"/>
					</g:HorizontalPanel>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
						<g:HorizontalPanel spacing="5">
							<g:Button text="&lt;&lt; Prev" width="75px" ui:field="buttonPrev">Prev</g:Button>
							<g:Button width="75px" ui:field="buttonProceed" enabled="false">Proceed</g:Button>
						</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 