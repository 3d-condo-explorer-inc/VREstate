<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
	</ui:style>
	<g:VerticalPanel width="750px" height="500px"
		horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		<g:Label text="Summary" horizontalAlignment="ALIGN_CENTER" />
		<g:HTML wordWrap="true" height="200px" ui:field="htmlSummary" width="475px" horizontalAlignment="ALIGN_LEFT"></g:HTML>
		<g:HTML wordWrap="true" width="475px" horizontalAlignment="ALIGN_LEFT" ui:field="html">You will be able to preview the order and, if you like it, you will be charged $49.99 (paid via secure connection with your credit card)</g:HTML>
		<g:Cell verticalAlignment="ALIGN_BOTTOM">
			<g:HorizontalPanel width="100%"
					horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM" spacing="10">
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:Button width="75px" ui:field="buttonCancel">Cancel</g:Button>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="5">
							<g:Button text="&lt;&lt; Prev" width="75px" ui:field="buttonPrev">Prev</g:Button>
							<g:Button width="75px" ui:field="buttonNext">Next >></g:Button>
						</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder> 