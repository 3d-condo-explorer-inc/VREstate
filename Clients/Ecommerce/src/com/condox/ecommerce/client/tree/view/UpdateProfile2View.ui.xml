<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
		.ageement {
			background-color: saddlebrown;
		}
	</ui:style>
	<g:VerticalPanel width="100%" height="100%"
		horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		<g:VerticalPanel>
			<g:VerticalPanel spacing="5">
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" width="100%">
			<g:Button ui:field="buttonClose">x</g:Button>
		</g:HorizontalPanel>
				<g:Label text="Step 2: Tell people more about yourself"/>
				<g:HorizontalPanel>
					<g:VerticalPanel spacing="10">
						<g:Label text="Your Picture (click to select)"/>
						<g:Image width="100px" height="100px" ui:field="image"/>
					</g:VerticalPanel>
					<g:Cell verticalAlignment="ALIGN_BOTTOM">
						<g:VerticalPanel spacing="10" height="100%" width="193px">
						<g:Cell width="90%">
							<g:HTML wordWrap="true">When people click your picture, they will load your Personal Website </g:HTML>
						</g:Cell>
						<g:Cell horizontalAlignment="ALIGN_RIGHT">
							<g:TextBox/>
						</g:Cell>
					</g:VerticalPanel>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="100%"
					horizontalAlignment="ALIGN_LEFT">
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:HorizontalPanel spacing="5">
							<g:Button width="75px" ui:field="buttonApply" text="Apply" enabled="false"/>
							<g:Button width="75px" ui:field="buttonCancel" text="Cancel"/>
					</g:HorizontalPanel>
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="5" horizontalAlignment="ALIGN_LEFT">
							<g:Button text="&lt;&lt; Prev" width="75px" ui:field="buttonPrev">Prev</g:Button>
							<g:Button width="75px" ui:field="buttonFinish" text="Finish"/>
						</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 