<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}

		
	</ui:style>
		<g:SimplePanel>
	<g:VerticalPanel spacing="5" horizontalAlignment="ALIGN_CENTER"
		verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
		<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT"
			width="100%">
			<g:Button text="x" ui:field="buttonClose" />
		</g:HorizontalPanel>
		<g:Label text="Sign In" horizontalAlignment="ALIGN_CENTER" />
		<g:Label text="eMail*" horizontalAlignment="ALIGN_LEFT" />
		<g:TextBox ui:field="textUserEmail" />
		<g:Label text="Password*" horizontalAlignment="ALIGN_LEFT" />
		<g:PasswordTextBox ui:field="textUserPassword"/>
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:Hyperlink text="Forgot password?" ui:field="hyperlink" />
		</g:Cell>
		<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:Button width="80%" text="Login" ui:field="buttonEnter" />
		</g:HorizontalPanel>
	</g:VerticalPanel>
		</g:SimplePanel>
</ui:UiBinder> 