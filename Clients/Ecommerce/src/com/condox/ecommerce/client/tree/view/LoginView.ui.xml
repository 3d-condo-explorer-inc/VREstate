<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: mediumblue;
			margin-left: 50px;
			background-color: slateblue;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel borderWidth="3">
				<g:VerticalPanel spacing="5">
					<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
						<g:Button width="25px" height="25px" text="X" enabled="false"/>
					</g:HorizontalPanel>
					<g:Label text="Sign In" horizontalAlignment="ALIGN_CENTER"/>
					<g:Label text="eMail*"/>
				<g:TextBox ui:field="textUserLogin"/>
				<g:Label text="Password*"/>
				<g:TextBox ui:field="textUserPassword"/>
				<g:Cell horizontalAlignment="ALIGN_CENTER">
					<g:Hyperlink text="Forgot password?"/>
				</g:Cell>
				<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Button width="80%" text="Login" ui:field="buttonEnter"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
</ui:UiBinder> 