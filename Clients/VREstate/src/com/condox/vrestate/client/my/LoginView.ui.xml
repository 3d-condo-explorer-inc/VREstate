<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:HorizontalPanel>
				<g:VerticalPanel spacing="5">
					<g:Label text="My login:"/>
					<g:TextBox enabled="false"/>
					<g:Label text="My password:"/>
					<g:TextBox enabled="false"/>
					<g:Button width="100%" text="I am registered user" enabled="false"/>
					<g:Button width="100%" ui:field="button">I am not a registered user,<br/> enter as guest.</g:Button>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
</ui:UiBinder> 