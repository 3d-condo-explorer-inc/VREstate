<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel>
				<g:VerticalPanel spacing="10">
				<g:HTML wordWrap="true">Only web/web is valid!<br/>Guest session make it.<br/>So:<br/></g:HTML>
				<g:HTML wordWrap="true">Your name:</g:HTML>
				<g:TextBox ui:field="textUserLogin"/>
				<g:HTML wordWrap="true">Your password:</g:HTML>
				<g:TextBox ui:field="textUserPassword"/>
				<g:Button width="100%" text="Enter" ui:field="buttonEnter"/>
				<g:HTML wordWrap="true">Guest session:</g:HTML>
				<g:Button width="100%" text="Guest enter" ui:field="buttonGuestEnter"/>
			</g:VerticalPanel>
			</g:VerticalPanel>
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_BOTTOM">
					<g:HorizontalPanel spacing="10">
						<g:Button text="Cancel" width="100px" ui:field="buttonCancel"/>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>
</ui:UiBinder> 