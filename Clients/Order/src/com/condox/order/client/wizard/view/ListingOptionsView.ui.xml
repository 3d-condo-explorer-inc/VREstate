<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			margin-right: 0px;
			margin-left: 0px;
			border-right: 0px;
			border-left: 0px;
			font-weight: bold;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:HorizontalPanel spacing="10">
				<g:HTML wordWrap="true">Specify the options for the listing:</g:HTML>
			</g:HorizontalPanel>
			<g:VerticalPanel>
				<g:VerticalPanel spacing="10">
				<g:CaptionPanel captionText="Listing options">
					<g:VerticalPanel spacing="10" horizontalAlignment="ALIGN_CENTER">
						<g:HorizontalPanel spacing="10" horizontalAlignment="ALIGN_LEFT">
							<g:Cell verticalAlignment="ALIGN_MIDDLE" width="40px">
								<g:Label text="MLS#  "/>
							</g:Cell>
							<g:TextBox width="138px" ui:field="textMLS"/>
						</g:HorizontalPanel>
						<g:CaptionPanel captionText="Virtual Tour URL (optional)">
							<g:VerticalPanel width="100%" spacing="10" horizontalAlignment="ALIGN_CENTER">
								<g:TextBox width="400px" ui:field="textVirtualTourUrl" visibleLength="50"/>
								<g:Button text="Validate Virtual Tour URL" width="100%" ui:field="buttonValidateVirtualTour" enabled="false"/>
							</g:VerticalPanel>
						</g:CaptionPanel>
						<g:CaptionPanel captionText="More Info URL (optional)">
							<g:VerticalPanel width="100%" spacing="10" horizontalAlignment="ALIGN_CENTER">
							<g:TextBox ui:field="textMoreInfoUrl" width="400px"/>
							<g:Button width="100%" text="Validate More Info URL" enabled="false" ui:field="buttonValidateMoreInfo"/>
						</g:VerticalPanel>
						</g:CaptionPanel>
					</g:VerticalPanel>
				</g:CaptionPanel>
			</g:VerticalPanel>
			</g:VerticalPanel>
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_BOTTOM">
					<g:HorizontalPanel spacing="10">
						<g:Button text="Cancel" width="100px" ui:field="buttonCancel"/>
					</g:HorizontalPanel>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="10">
						<g:Button text="&lt;&lt; Prev" width="100px" ui:field="buttonPrev"/>
						<g:Button text="Next &gt;&gt;" width="100px" ui:field="buttonNext" enabled="false"/>
					</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>
</ui:UiBinder> 