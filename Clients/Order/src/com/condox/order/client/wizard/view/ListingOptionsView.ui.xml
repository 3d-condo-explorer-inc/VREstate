<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			margin-right: 0px;
			margin-left: 0px;
			border-right: 0px;
			border-left: 0px;
			font-weight: bold;
		}
	</ui:style>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel>
				<g:VerticalPanel spacing="10">
				<g:CaptionPanel captionText="Listing options">
					<g:VerticalPanel spacing="10">
						<g:HorizontalPanel spacing="5">
							<g:Cell verticalAlignment="ALIGN_MIDDLE" width="40px">
								<g:Label text="MLS#  "/>
							</g:Cell>
							<g:TextBox/>
						</g:HorizontalPanel>
						<g:VerticalPanel width="100%" spacing="5">
							<g:Label text="Virtual Tour URL:"/>
							<g:HorizontalPanel width="100%">
								<g:Cell horizontalAlignment="ALIGN_CENTER">
									<g:TextBox width="188px" ui:field="textVirtualTourUrl"/>
								</g:Cell>
							</g:HorizontalPanel>
							<g:CheckBox text="Use your old link" ui:field="checkBox"/>
							<g:Cell width="100%">
								<g:Button text="Validate this link now..." width="100%" ui:field="button"/>
							</g:Cell>
						</g:VerticalPanel>
						<g:VerticalPanel width="100%" spacing="5">
							<g:Label text="More Info URL:"/>
							<g:Cell horizontalAlignment="ALIGN_CENTER">
								<g:TextBox width="188px" ui:field="textMoreInfoUrl"/>
							</g:Cell>
						</g:VerticalPanel>
					</g:VerticalPanel>
				</g:CaptionPanel>
			</g:VerticalPanel>
			</g:VerticalPanel>
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_BOTTOM">
					<g:HorizontalPanel spacing="10">
						<g:Button text="Cancel" width="100px" ui:field="buttonCancel"/>
					</g:HorizontalPanel>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="10">
						<g:Button text="&lt;&lt; Prev" width="100px" ui:field="buttonPrev"/>
						<g:Button text="Next &gt;&gt;" width="100px" ui:field="buttonNext"/>
					</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>
</ui:UiBinder> 