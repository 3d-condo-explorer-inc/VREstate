<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			margin: null null null 100px;
			font-weight: normal;
		}
		.my-product-type {
			margin-left: 50px;
		}
		.type-info {
			margin-top: 2px;
			margin-left: 10px;
		}
		.rb-mls {
			text-align: center;
		}
	</ui:style>
					<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HorizontalPanel spacing="20">
							<g:HTML wordWrap="true">Please either specify the MLS# for your listing, or, if you do not remember it, provide the address</g:HTML>
						</g:HorizontalPanel>
						<g:VerticalPanel width="100%">
							<g:VerticalPanel spacing="20" width="100%">
						<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel spacing="20">
				<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
					<g:RadioButton name="Listing/Layout" text="Use MLS#" ui:field="rbMLS" checked="true" width="200px"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.my-product-type}">
					<g:VerticalPanel>
						<g:TextBox ui:field="textMLS"/>
						<g:Label text="(sample - C1234567)" horizontalAlignment="ALIGN_CENTER"/>
					</g:VerticalPanel>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
					<g:RadioButton name="Listing/Layout" ui:field="rbNoMLS" styleName="{style.rb-mls}">Do not remember the MLS# - let's use the address</g:RadioButton>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
					</g:VerticalPanel>
						</g:VerticalPanel>
									<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_BOTTOM">
					<g:HorizontalPanel spacing="10">
						<g:Button text="Cancel" width="100px" ui:field="buttonCancel"/>
					</g:HorizontalPanel>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel spacing="10">
						<g:Button text="&lt;&lt; Prev" width="100px" ui:field="buttonPrev"/>
						<g:Button text="Next &gt;&gt;" width="100px" ui:field="buttonNext" enabled="false"/>
					</g:HorizontalPanel>
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
					</g:VerticalPanel>
</ui:UiBinder> 