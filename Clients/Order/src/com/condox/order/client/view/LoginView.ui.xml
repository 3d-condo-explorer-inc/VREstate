<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.my-west-panel {
			margin-right: 50px;
		}
		.my-dockpanel {
			background-color: brown;
		}
		.my2 {
			background-color: darkblue;
		}
		.my3 {
			background-color: forestgreen;
		}
		.my4 {
			background-color: yellow;
		}
	</ui:style>
									<g:DockLayoutPanel unit="PX">
										<g:center>
											<g:ScrollPanel>
												<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
													<g:HorizontalPanel width="100%" height="200px"/>
													<g:VerticalPanel borderWidth="2" verticalAlignment="ALIGN_MIDDLE">
															<g:VerticalPanel spacing="10" verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" width="75px">
						<g:Label text="Name:"/>
					</g:Cell>
					<g:TextBox enabled="false" ui:field="textName"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" width="75px">
						<g:Label text="Password:"/>
					</g:Cell>
					<g:TextBox enabled="false" ui:field="textPassword"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="100%">
					<g:Cell width="">
						<g:Button width="100%" text="Login (required Name &amp; Password)" enabled="false" ui:field="buttonLogin"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="OR"/>
				</g:Cell>
				<g:HorizontalPanel width="100%">
					<g:Button width="100%" text="Guest login (no Name &amp; Password)" ui:field="buttonGuestLogin"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
											</g:VerticalPanel>
												</g:VerticalPanel>
											</g:ScrollPanel>
										</g:center>
									</g:DockLayoutPanel>
</ui:UiBinder> 